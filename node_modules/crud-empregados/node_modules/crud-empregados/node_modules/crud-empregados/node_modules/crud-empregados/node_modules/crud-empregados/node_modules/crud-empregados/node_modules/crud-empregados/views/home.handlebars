<h1>Empregados</h1>
<form action="/empregados" method="POST">
    <input type="text" name="nome" placeholder="Nome" required>
    <input type="number" name="salario_bruto" placeholder="Salário Bruto" required>
    <select name="departamento" required>
        <option value="1">Administrativo</option>
        <option value="2">Designer</option>
        <option value="3">Contabil</option>
        <option value="4">Fábrica</option>
    </select>
    <button type="submit">Adicionar Empregado</button>
</form>

<form action="/pesquisar" method="POST">
    <input type="text" name="nome" placeholder="Pesquisar por Nome">
    <button type="submit">Pesquisar</button>
</form>

<ul>
    {{#each empregados}}
    <li>
        ID: {{id}}, Nome: {{nome}}, Salário Bruto: {{salario_bruto}}, Salário Líquido: {{salarioLiquido}},
        Departamento: {{departamento}}
        <a href="/empregados/edit/{{id}}">Editar</a>
        <form action="/empregados/delete/{{id}}" method="POST" style="display:inline;">
            <button type="submit">Excluir</button>
        </form>
    </li>
    {{/each}}
</ul>

<a href="/salarios">Consultar Maior e Menor Salário</a>